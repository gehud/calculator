@page "/integrals/right-side-rectangles/variable-step"

<VariableStepAlgorithmLayout 
	BackPage="integrals/right-side-rectangles"
	NumericMethod="Calculate" />

@code {
	private double Calculate(Func<double, double> function, double a, double b, double h) {
		double x = a + h;
		double sum = 0.0;
		do {
			sum += function(x);
			x += h;
		} while (x <= b);

		return sum * h;
	}
}