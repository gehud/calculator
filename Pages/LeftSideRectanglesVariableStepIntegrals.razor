@page "/integrals/left-side-rectangles/variable-step"

<VariableStepAlgorithmLayout 
	BackPage="integrals/left-side-rectangles" 
	NumericMethod="Calculate" />

@code {
	double Calculate(Func<double, double> function, double a, double b, double h) {
		double sum = 0.0;
		double x = a;
		do {
			sum += function(x);
			x += h;
		} while (x <= b - h);

		return h * sum;
	}
}