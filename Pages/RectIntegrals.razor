@page "/integrals/rect"

<div>
	<h3 style="display:inline-block">Rect Integrals</h3>
	<button class="btn-outline-dark" @onclick="NavigateBack">Back</button>
</div>

<div>
	<button class="btn-outline-dark" style="width:60px" @onclick="NavigateToLeft">Left</button>
	<button class="btn-outline-dark" style="width:60px" @onclick="NavigateToRight">Right</button>
</div>

@inject NavigationManager navigationManager;

@code {
	void NavigateBack()
	{
		navigationManager.NavigateTo("integrals");
	}

	void NavigateToLeft() 
	{
		navigationManager.NavigateTo("integrals/rect/left");
	}

	void NavigateToRight()
	{
		navigationManager.NavigateTo("integrals/rect/right");
	}
}