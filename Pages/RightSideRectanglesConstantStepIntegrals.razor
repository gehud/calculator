	BackPage="integrals/right-side-rectangles" 
	NumericMethod="Calculate" />

@code {
	private double Calculate(Func<double, double> function, double a, double b, long n) {
		double h = (b - a) / n;
		double x = a + h;
		double sum = 0.0;
		do {
			sum += function(x);
			x += h;
		} while (x <= b);

		return sum * h;
	}
}
